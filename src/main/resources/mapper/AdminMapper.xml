<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cheongsan.domain.admin.mapper.AdminMapper">

    <select id="getAllUsers" resultType="cheongsan.domain.admin.entity.AdminUser">
        SELECT id, nickname, created_at, role
        FROM user
        ORDER BY created_at DESC
    </select>

    <delete id="deleteUserById" parameterType="long">
        DELETE
        FROM user
        WHERE id = #{userId}
    </delete>

</mapper>